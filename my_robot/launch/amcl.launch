<launch>
  <arg name="map_file" default="$(find my_robot)/maps/project1.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- AMCL Node -->
  <node name="amcl" pkg="amcl" type="amcl" output="screen">
    <!-- Overall filter parameters -->
    <param name="min_particles"        value="100"/>       # 100,500
    <param name="max_particles"        value="10000"/>     # 5000
    <param name="kld_err"              value="0.05"/>      # 0.01, 0.05
    <param name="kld_z"                value="0.99"/>      # 0.99
    <param name="update_min_d"         value="0.1"/>       # 0.2
    <param name="update_min_a"         value="0.5235"/>    # 0.5235
    <param name="resample_interval"    value="1"/>         # 2, 1
    <param name="transform_tolerance"  value="0.2"/>       # 0.1, 0.2
    <param name="recovery_alpha_slow"  value="0.001"/>     # 0.0, 0.0, 0.001
    <param name="recovery_alpha_fast"  value="0.1"/>       # 0.0, 0.0, 0.1
    <param name="initial_pose_x"       value="0.0"/>       # 0.0
    <param name="initial_pose_y"       value="0.0"/>       # 0.0
    <param name="initial_pose_a"       value="-1.57079632679"/>       # 0.0
    <param name="gui_publish_rate"     value="10.0"/>      # -1.0, 10
    <param name="save_pose_rate"       value="0.5"/>       # 0.5
    <param name="use_map_topic"        value="true"/>      # false
    <param name="first_map_only"       value="false"/>     # false

    <!-- Laser parameters -->
    <param name="laser_min_range"            value="-1.0"/>   # -1.0
    <param name="laser_max_range"            value="-1.0"/>   # -1.0
    <param name="laser_max_beams"            value="180"/>    # 180
    <param name="laser_z_hit"                value="0.5"/>    # 0.95, 0.5
    <param name="laser_z_short"              value="0.05"/>   # 0.1,  0.05
    <param name="laser_z_max"                value="0.05"/>   # 0.05
    <param name="laser_z_rand"               value="0.5"/>    # 0.05, 0.5
    <param name="laser_sigma_hit"            value="0.2"/>    # 0.2
    <param name="laser_lambda_short"         value="0.1"/>    # 0.1
    <param name="laser_likelihood_max_dist"  value="2.0"/>    # 2.0
    <param name="laser_model_type"           value="likelihood_field"/>

    <!-- Odometry model parameters-->
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="odom_alpha1"     value="0.5"/>    <!-- 0.2 rr -->
    <param name="odom_alpha2"     value="0.25"/>   <!-- 0.2 rt -->
    <param name="odom_alpha3"     value="0.6"/>    <!-- 0.2,0.8 tt -->
    <param name="odom_alpha4"     value="0.25"/>   <!-- 0.2 tr -->
    <param name="odom_alpha5"     value="0.2"/>    <!-- 0.2,0.1 -->
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>
  </node>

  <!-- Move Base -->
  <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    <rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find my_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find my_robot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find my_robot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find my_robot)/config/base_local_planner_params.yaml" command="load" />
  </node>
</launch>

